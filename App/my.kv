WindowManager:
    StartScreen:
    GroceryList:
    ShoppingCart:
    Product:


<StartScreen>:
    name: "main"

    first_name: first_name
    last_name: last_name

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: "Name: "

            TextInput:
                id: first_name
                multiline: False
                background_color: (0.3, 0.4, 0.5, 1)

            Label:
                text: "Last name: "

            TextInput:
                id: last_name
                multiline: False
                background_color: (0.3, 0.4, 0.5, 1)

        Button:
            text: "Submit"
            on_release:
                root.btn()
                app.root.current = "list" if first_name.text and last_name.text else "main"


<GroceryList>:
    name: "list"

    product_name: product_name

    GridLayout:
        cols: 1

        GridLayout:
            cols: 3

            Label:
                text: "Name of product: "

            TextInput:
                id: product_name
                multiline: False
                background_color: (0.3, 0.4, 0.5, 1)

            Button:
                text: "Submit"
                background_color: (0.2, 0.4, 0.4, 1)
                on_release:
                    root.btn()
                    app.root.current = "product" if product_name.text else "list"

        GridLayout:
            cols: 2

            Button:
                text: "Go back"
                on_release:
                    app.root.current = "main"

            Button:
                text: "Shopping cart"
                on_release:
                    app.root.current = "shopping_cart"


<ShoppingCart>:
    name: "shopping_cart"

    GridLayout:
        cols: 1

        Label:
            text: "Shopping cart: "

        Button:
            text: "Keep on shopping"
            on_release:
                app.root.current = "list"

        Button:
            text: "Go back to product"
            on_release:
                app.root.current = "product"


<Product>:
    name: "product"

    product: product

    GridLayout:
        cols: 1

        Label:
            text: "Information of product: "
            background_color: 0.3, 0.4, 0.5, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
					size: self.size
					pos: self.pos

        GridLayout:
            cols: 2

            Label:
                text: "Product name:"

            Label:
                id: product
                text: ""

            Label:
                text: "EAN-Code: "
                background_color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: ""
                background_color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: "Brand: "

            Label:
                text: ""

            Label:
                text: "Price: "
                background_color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: ""
                background_color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: "Weight: "

            Label:
                text: ""

            Label:
                text: "Packaging: "
                background_color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: ""
                background_color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: "Nutrition values: "

            Label:
                text: ""

        GridLayout:
            cols: 2

            Button:
                text: "Add to cart"
                on_release:
                    app.root.current = "shopping_cart"

            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "list"
